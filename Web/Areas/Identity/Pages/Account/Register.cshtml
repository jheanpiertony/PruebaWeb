@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.FotoPerfil" class="control-label"></label>
                <input asp-for="Input.FotoPerfil" type="file" class="form-control" />
                <span asp-validation-for="Input.FotoPerfil" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Nombres" class="control-label"></label>
                <input asp-for="Input.Nombres" class="form-control" />
                <span asp-validation-for="Input.Nombres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Apellidos" class="control-label"></label>
                <input asp-for="Input.Apellidos" class="form-control" />
                <span asp-validation-for="Input.Apellidos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.FechaNacimiento" class="control-label"></label>
                <input asp-for="Input.FechaNacimiento" class="form-control" />
                <span asp-validation-for="Input.FechaNacimiento" class="text-danger"></span>
            </div>
            @*<div class="form-group">
            <label asp-for="Input.PasswordHash" class="control-label"></label>
            <input asp-for="Input.PasswordHash" class="form-control" />
            <span asp-validation-for="Input.PasswordHash" class="text-danger"></span>
        </div>*@
            <div class="form-group">
                <label asp-for="Input.PhoneNumber" class="control-label"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Genero" class="control-label"></label>
                @*<select asp-for="Input.Genero" asp-items="@Model.ListadoGenero" class="form-control"></select>*@
                <select asp-for="Input.Genero" asp-items="@Html.GetEnumSelectList<Genero>()" class="form-control"></select>
                @*<select asp-for="Input.Genero" asp-items="@Html.GetEnumSelectList<Genero>()" class="form-control"></select>*@
                <span asp-validation-for="Input.Genero" class="text-danger"></span>
            </div>


            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
